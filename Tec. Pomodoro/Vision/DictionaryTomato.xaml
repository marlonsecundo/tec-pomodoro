<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <FontFamily x:Key="BitDust">/Assets/Fonts/bitdust.ttf#BitDust One</FontFamily>
    <FontFamily x:Key="Bariol">/Assets/Fonts/bariol.ttf#Bariol</FontFamily>

    <SolidColorBrush x:Key="TextColor" Color="White"/>
    <SolidColorBrush x:Key="BackgroundColor" Color="#FFD53349"/>
    <SolidColorBrush x:Key="BackgroundColor2" Color="#FFD9485C"/>

    <Style TargetType="TextBlock">
        <Setter  Property="Foreground" Value="White"/>
        <Setter Property="FontFamily" Value="/Assets/Fonts/bariol.ttf#Bariol"/>
    </Style>

    <!--Width="120" Height="40" CornerRadius="20" Background="White"-->
    <Style TargetType="Border">
        <Setter Property="Width" Value="120"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="Background" Value="{StaticResource TextColor}"/>
    </Style>

    <Style TargetType="FontIcon">
        <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
    </Style>


    <!--Background="White" BorderBrush="{x:Null}" -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="{x:Null}"/>
        <Setter Property="BorderBrush" Value="{x:Null}"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
    </Style>
    



</ResourceDictionary>